entry _main;

_main:
  print("--- Async Connectivity Test ---");
  
  // Test 1: Fetch
  print("1. Fetching Todo item...");
  mut data = fetch("https://jsonplaceholder.typicode.com/todos/1");
  
  if data != null:
      print("Fetch Success!");
      print("Title:", data.title);
      print("Completed:", data.completed);
  :; else:
      print("Fetch Failed!");
  :;

  // Test 2: Sleep
  print("2. Sleeping for 2 seconds (Watch me wait)...");
  sleep(2000);
  print("Wake up! Script finished.");
:;
