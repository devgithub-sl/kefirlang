entry _main;

_main:
  // 1. Array Creation & Logic
  mut nums = [1, 2, 3];
  
  if nums.len() == 3 && nums[0] == 1:
     print("Array created successfully:", nums);
  :;

  // 2. Modulo & Loops
  print("Printing even numbers using Modulo:");
  mut i = 0;
  while i < 10:
     if i % 2 == 0:
         print(i, "is even");
     :;
     i = i + 1;
  :;

  // 3. Array Mutation
  // We defined nums as 'mut', so this works:
  nums[1] = 99;
  print("Mutated Array:", nums);

  // 4. Immutable Array Error
  let frozen = [10, 20];
  frozen[0] = 5; // This should show RED ERROR in log
:;