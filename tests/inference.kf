
entry _main;

_main:
    print("--- Inference Test ---");
    
    // Test 1: Int Inference
    mut x = 10;
    print("x is int:", x);
    x = "hello"; // Should Error: "Type Error: Variable 'x' expects 'number'"
    // Since we can't catch, I'll rely on verify script to check this failure or just manual confirmation.
    // For automated pass, I'll test VALID reassignment.
    x = 20;
    print("x reassigned validly:", x);

    // Test 2: String Inference
    mut s = "hello";
    print("s is string:", s);
    // s = 123; // Should Error
    s = "world";
    print("s reassigned validly:", s);

    // Test 3: Boolean Inference
    mut b = true;
    print("b is bool:", b);
    // b = 0; // Should Error
    b = false;
    print("b reassigned validly:", b);

    // Test 4: Array Inference
    mut arr = [1, 2, 3];
    print("arr is array:", arr);
    // arr = 1; // Should Error
    
    print("--- Done ---");
:;
